<Page x:Class="SessionRoss3.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SessionRoss3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <StackPanel VerticalAlignment="Center">
        <Label Content="Логин"/>
        <TextBox x:Name="LogTb" GotFocus="LogTb_GotFocus" LostFocus="LogTb_LostFocus"/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="PwdPb"/>
        <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>

        <Popup x:Name="PopupStack" Placement="Right">
            <StackPanel Orientation="Vertical" Background="Gray" Margin="10">
                <Label Content="+ 7(XXX)XXX-XX-XX"/>
                <Label Content="aa@aa"/>
            </StackPanel>
        </Popup>
    </StackPanel>
</Page>
